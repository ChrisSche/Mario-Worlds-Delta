    case (-1): {
    
        //Smoke
        with (instance_create(x, y, obj_smoke)) sprite_index = spr_smoke_16;
        
        //Create bomb
        with (instance_create(x, y-8, obj_bobomb_cannon)) {
        
            vspeed = -3.5;
            hspeed = -1;
        }            
    } break;
}

//Repeat after 3 seconds
alarm[0] = 180;
